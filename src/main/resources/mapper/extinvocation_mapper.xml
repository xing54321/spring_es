<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.spring_mybatis.mapper.ExtInvocationMapper">

	<select id="getExtInvocation"
		resultType="com.example.spring_mybatis.model.ExtInvocation">
		select * from ext_invocation_count where featureId =
		#{featureId} and
		createDate between #{startDate} and #{endDate};
	</select>

	<select id="selectByDate"
		resultType="com.example.spring_mybatis.model.ExtInvocation">
		select * from ext_invocation_count where
		createDate =#{currentDate}
	</select>

	<update id="updateBatch" parameterType="java.util.List">
		<foreach collection="list" item="item" index="index" open=""
			close="" separator=";">
			update ext_invocation_count
			<set>
				<if test="item.featureId != null">
					featureId = #{item.featureId,jdbcType=INTEGER},
				</if>
				<if test="item.createDate != null and item.createDate != ''">
					createDate = #{item.createDate,jdbcType=VARCHAR},
				</if>
				<if test="item.updateTime != null and item.updateTime != ''">
					updateTime = #{item.updateTime,jdbcType=VARCHAR},
				</if>
				<if test="item.url != null and item.url != ''">
					url = #{item.url,jdbcType=VARCHAR},
				</if>
				<if test="item.invocationCount != null">
					invocationCount =
					#{item.invocationCount,jdbcType=INTEGER},
				</if>
			</set>
			where id = #{item.id,jdbcType=INTEGER}
		</foreach>
	</update>

	<insert id="insertBatch"
		parameterType="com.example.spring_mybatis.model.ExtInvocation">
		INSERT INTO ext_invocation_count
		(featureId,
		createDate,updateTime,url,invocationCount)
		VALUES
		<foreach collection="list" item="extInvocation" separator=",">
			(#{extInvocation.featureId}, #{extInvocation.createDate},#{extInvocation.updateTime}
			#{extInvocation.url},#{extInvocation.invocationCount})
		</foreach>
	</insert>
</mapper>